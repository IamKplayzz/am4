{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "py: start api",
            "type": "shell",
            "command": "uv run python -m src.am4 start api",
            "problemMatcher": []
        },
        {
            "label": "py: start api+discord bot",
            "type": "shell",
            "command": "uv run python -m src.am4 start api,bot",
            "problemMatcher": []
        },
        {
            "label": "py: uninstall",
            "type": "shell",
            "command": "uv pip uninstall am4"
        },
        {
            "label": "py: generate stubs",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/am4/utils"
            },
            "command": "uv run generate-stubs.py",
            "problemMatcher": []
        },
        {
            "label": "py: install",
            "type": "shell",
            "command": "uv pip install --verbose \".[dev,bot,api,docs]\" --config-settings=cmake.define.COPY_DATA=1"
        },
        {
            "label": "py: reinstall",
            "dependsOrder": "sequence",
            "dependsOn": [
                "py: uninstall",
                "py: install",
                "py: generate stubs"
            ],
            "problemMatcher": []
        },
        {
            "label": "py: test",
            "type": "shell",
            "command": "uv run pytest"
        },
        {
            "label": "cargo: clippy",
            "type": "shell",
            "command": "cargo clippy --workspace --all-targets --all-features -- -D warnings",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "cargo: fmt all",
            "type": "shell",
            "command": "cargo fmt --all",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cargo: test all",
            "type": "shell",
            "command": "cargo test --workspace --all-features --all-targets",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "cargo: build docs",
            "type": "shell",
            "command": "RUSTDOCFLAGS=\"-D rustdoc::all -A rustdoc::private-doc-tests\" cargo doc --package am4 --all-features --no-deps",
            "group": "test",
            "problemMatcher": []
        }
    ]
}